<!DOCTYPE html>
<html lang="pt-br">

<head>
    <% include partes/head.ejs %>
</head>

<body>
    <header>
        <% include partes/menu.ejs %>
    </header>
    <main>
        <div class="row">
            <div class="col-md-12">
                <form action="POST">
                    <div class="form-group">
                        <label for="">Título:</label>
                        <input type="text" class="form-control" id="titulo" name="titulo">
                    </div>
                    <div class="form-group">
                        <label for="resumo">Resumo:</label>
                        <input type="text" class="form-control" id="resumo" name="resumo">
                    </div>
                    <div class="form-group">
                        <label for="autor">Autor:</label>
                        <input type="text" class="form-control" id="autor" name="autor">
                    </div>
                    <div class="form-group">
                        <label for="data">Data:</label>
                        <input type="date" class="form-control" id="data_noticia" name="data_noticia">
                    </div>
                    <div class="form-group">
                        <label for="categoria">Categoria:</label>
                        <label class="checkbox-inline"><input type="checkbox" value="">Node - Exemplos</label>
                        <label class="checkbox-inline"><input type="checkbox" value="">Node - Teórico</label>
                        <label class="checkbox-inline"><input type="checkbox" value="">Node - Dicas</label>
                        <label class="checkbox-inline"><input type="checkbox" value="">Outras dicas</label>
                    </div>
                    <div class="form-group">
                        <label for="noticia">Notícia</label>
                        <textarea class="form-control" name="noticia" id="noticia" cols="30" rows="10"></textarea>
                    </div>
                    <button type="submit" class="btn btn-default">Cadastrar</button>
                </form>
            </div>
        </div>
    </main>
    <footer>
        <% include partes/rodape.ejs %>
    </footer>
</body>

</html>