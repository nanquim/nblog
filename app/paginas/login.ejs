<!DOCTYPE html>
<html lang="pt-br">
<head>
    <% include partes/head.ejs %>
    
    <script>
    $( document ).ready(function() {
      
        $("#form_registro").hide();
        
        $("#registrar").click(function () {
            $("#form_login").hide();
            $("#form_registro").show();
        });   
        
        $("#logar").click(function () {
            $("#form_registro").hide();
            $("#form_login").show();
        });  
    }); 
    </script>
</head>

<body>
    <header>
        <% include partes/menu.ejs %>
    </header>
    <main>
        <div class="container">
            <!-- TODO bug validação está persistindo entre os forms por estarem na msm página -->
            <!-- TODO se a validação for ok, mudar cor do focus do form de vermelho pra verde -->
            <!-- TODO colocar ícones nos formulários -->
            <!-- TODO Comparar se as 2 senhas do form registro são iguais -->
            <% if(validacao.length > 0) { %>
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-danger">
                        <strong>Atenção!</strong>
                        <ul>
                            <% for(var i = 0; i < validacao.length; i++ ) { %>
                            <li>
                                <%= validacao[i].msg %>
                            </li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
            <% } %>
            <div class="row" id="form_login">
                <div class="col-sm-6 offset-sm-3 text-center">
                    <form action="/logar" method="POST">
                        <fieldset>
                            <legend>Login</legend>
                            <div class="form-group">
                                <label for="formLoginEmail">Email:</label>
                                <input type="email" class="form-control" id="formLoginEmail" name="email"
                                    aria-describedby="emailHelp" placeholder="Seu email" autocomplete="email" required>
                            </div>
                            <div class="form-group">
                                <label for="formLoginSenha">Senha:</label>
                                <input type="password" class="form-control" id="formLoginSenha" name="senha"
                                    placeholder="Sua senha" autocomplete="senha" required>
                            </div>
                            <!-- TODO implementar -->
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Lembre de mim</label>
                            </div>
                            <button type="submit" class="btn btn-success">Logar</button>
                        </fieldset>
                        <div>
                            Novo usuário?
                            <a href="#" id="registrar">Registre-se!</a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row" id="form_registro">
                <div class="col-sm-6 offset-sm-3 text-center">
                        <form action="/registrar" method="POST">
                        <fieldset>
                            <legend>Registro</legend>
                            <div class="form-group">
                                <label for="formRegistroNome">Nome:</label>
                                <input type="text" class="form-control" id="formRegistroNome" name="formRegistroNome" placeholder="Seu nome" required>
                            </div>
                            <div class="form-group">
                                <label for="formRegistroEmail">Email:</label>
                                <input type="email" class="form-control" id="formRegistroEmail" name="formRegistroEmail"
                                    placeholder="Seu email" autocomplete="email" required>
                            </div>
                            <div class="form-group">
                                <label for="formRegistroSenha">Senha:</label>
                                <input type="password" class="form-control" id="formRegistroSenha" name="formRegistroSenha"
                                    placeholder="Sua senha" autocomplete="senha" required>
                            </div>
                            <div class="form-group">
                                <label for="formRegistroSenhaValidacao">Repita a senha:</label>
                                <input type="password" class="form-control" id="formRegistroSenhaValidacao" name="senhaValidacao"
                                    placeholder="Sua senha" autocomplete="senha" requiredrs>
                            </div>
                            <!-- TODO implementar -->
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck2">
                                <label class="form-check-label" for="exampleCheck1">Lembre de mim</label>
                            </div>
                            <button type="submit" class="btn btn-success">Registrar</button>
                        </fieldset>
                        <div>
                            Já tem uma conta?
                            <a href="#" id="logar">Logue!</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <% include partes/rodape.ejs %>
    </footer>
</body>
</html>